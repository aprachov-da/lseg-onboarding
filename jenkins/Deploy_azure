pipeline {
    agent any

    tools {
        jdk 'jdk11'
    }

    environment {
        AZURE_SSH_KEY = "/var/lib/jenkins/azure.pem"
        AZURE_USER_NAME = "azureuser"
        AZURE_HOST = "104.215.72.100"
        AZURE_LIBS_HOME = '/home/azureuser/lib'
    }

    stages {
        stage('Deploy') {
            steps {
                sh 'chmod +x gradlew'
                sh './gradlew clean bootJar --console=plain'
                sh 'ssh -i $AZURE_SSH_KEY $AZURE_USER_NAME@$AZURE_HOST "sudo systemctl stop ist-service"'
                sh 'scp -i $AZURE_SSH_KEY ist-service/build/libs/ist-service-0.0.1-SNAPSHOT.jar $AZURE_USER_NAME@$AZURE_HOST:$AZURE_LIBS_HOME'
                sh 'ssh -i $AZURE_SSH_KEY $AZURE_USER_NAME@$AZURE_HOST "ls $AZURE_LIBS_HOME"'
                sh 'ssh -i $AZURE_SSH_KEY $AZURE_USER_NAME@$AZURE_HOST "sudo systemctl start ist-service"'
            }
        }
    }
}
